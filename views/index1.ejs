<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <title>Document</title>
    
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="POST">
                <input name="title" class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="Title goes here">
                <textarea name="details" class=" mt-1 block w-full rounded-md outline-nonent-2 px-5 py-2 bg-zinc-800 resize-none" placeholder="Write your task details"></textarea>
                <input class="mt-2 bg-blue-600  p-1 rounded-md"  type="submit" value="create task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap  p-10">
           <% if(files.length >0){ %>
               <% files.forEach(function(val){ %>
                <div class="task w-72  px-3 py-4 bg-zinc-800 rounded-md">
                    <h1 class="text-white tex-3xl tracking-tighter"><%= val%></h1>
                    <a class="text-blue-500 inline-block mt-3" href="/files/<%=val%>">Read more</a>
                </div>
           <% }) %>
           <%} else { %>
            <h3 class="text-zinc-400">No Task Yet</h3>

            <% }%>

           
            
        </div>

    </div>
</body>
</html>